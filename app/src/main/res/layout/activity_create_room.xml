<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomActivity"
    android:background="@color/colorBackground">

    <include
        layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/create_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Room"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_model"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:id="@+id/et_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Name"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_model"
        android:layout_below="@+id/create_room_title"
        android:layout_margin="32dp"/>

    <EditText
        android:id="@+id/et_room_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Name"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_model"
        android:layout_below="@+id/et_room_name"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        />

    <Button
        android:id="@+id/btn_create_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_model"
        android:layout_below="@+id/et_room_detail"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>